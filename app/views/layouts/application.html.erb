<!DOCTYPE html>
<html>
<head>
  <title>Workout Tracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
    </script>
  <![endif]-->
</head>
<body>
  
  <header class="navbar navbar-fixed-top navbar-default">
    <div class="container">
      <%= link_to "liftO", root_path , id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
        <% if lifter_signed_in? %>
            <li><%= link_to "Account: " + current_lifter.name, edit_lifter_registration_path  %></li>
            <li><%= link_to "Logout", destroy_lifter_session_path, method: :delete  %></li>
        <% else %>
            <li><%= link_to "Sign up", new_lifter_registration_path %></li>
            <li><%= link_to "Login", new_lifter_session_path  %></li>
        <% end %>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </div>

  <%= debug(params) if Rails.env.development? %>

</body>
</html>
